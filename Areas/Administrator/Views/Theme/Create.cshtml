@model ShopProject.Areas.Administrator.Models.Theme

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Mới Chủ Đề</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Theme")
</div>
<hr />
@using (Html.BeginForm("Create", "Theme", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="text-danger">
        @ViewBag.Createtheme

    </div>
    <div class="form-group">
        <label>Tên chủ đề:</label>
        <div class="input">
            @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên chủ đề...",@required = "required", @requiredmsg = "Mời nhập tên chủ đề..!!" } })
        </div>
    </div>

    <div class="form-group">

        <input type="submit" value="Thêm" class="btn btn-success" />

    </div>
</div>
}
<style>
    .input{
        width:300px;
    }
</style>
