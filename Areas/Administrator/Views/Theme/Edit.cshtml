@model ShopProject.Areas.Administrator.Models.Theme

@{
    ViewBag.Title = "Sửa thông tin chủ đề";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Sửa Tên Chủ Đề</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Theme")
</div>
<hr />
@using (Html.BeginForm("Edit", "Theme", FormMethod.Post, new { enctype = "multipart/form-data", @required = "required", @requiredmsg = "Mời nhập tên chủ đề..!!" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Tên chủ đề:</label>
        <div class="input">
            @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên chủ đề..." } })
        </div>
    </div>

    <div class="form-group">

        <input type="submit" value="Sửa" class="btn btn-success" />

    </div>
</div>
}
<style>
    .input {
        width: 300px;
    }
</style>
