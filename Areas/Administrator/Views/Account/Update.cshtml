@model ShopProject.Areas.Administrator.Models.Administrator

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập Nhật Thông Tin Người Dùng</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Account")
</div>

@using (Html.BeginForm("Update", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.adAcc)
    @Html.HiddenFor(model => model.adStatus)
    @Html.HiddenFor(model => model.adPass)
    @Html.HiddenFor(model => model.adNgaytao)

    <div class="form-group col-lg-5">

        <div class="form-group">
            <label>Quyền người Dùng</label>
            @Html.DropDownListFor(model => model.adQuyen, ViewBag.pdcListEdit as SelectList, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <label>Tên Người Dùng</label>

            @Html.EditorFor(model => model.adHoten, new { htmlAttributes = new { @class = "form-control ", @required = "required", @requiredmsg = "Mời nhập họ tên..!!" } })
            @Html.ValidationMessageFor(model => model.adHoten, "", new { @class = "text-danger" })

        </div>


        <div class="form-group">
            <label>Email</label>
            @Html.EditorFor(model => model.adEmail, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "required", @requiredmsg = "Mời nhập email đúng định dạng..!!" } })
            @Html.ValidationMessageFor(model => model.adEmail, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <label>Địa chỉ</label>
            @Html.EditorFor(model => model.adDiaChi, new { htmlAttributes = new { @class = "form-control", @requiredmsg = "Mời nhập địa chỉ..!!" } })
            @Html.ValidationMessageFor(model => model.adDiaChi, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.adSDT, new { htmlAttributes = new { @class = "form-control", @requiredmsg = "Mời nhập số điện thoại..!!" } })
            @Html.ValidationMessageFor(model => model.adSDT, "", new { @class = "text-danger" })

        </div>




        <input type="submit" value="Cập nhật" class="btn btn-success" />

    </div>


</div>
}
