@model ShopProject.Areas.Administrator.Models.Product

@{
    ViewBag.Title = "Tạo sản phẩm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Tạo sản phẩm mới</h2>


<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
</div>
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.CreateProError
        
        </div>
        <div class="form-group col-lg-5">
            <label>Mã sản phẩm</label>
            <input type="text" required requiredmsg="Mời nhập mã sản phẩm..!!" name="masp" class="form-control" placeholder="Mời nhập tên mã sản phẩm.." />

            <div class="text-danger">@Html.ValidationMessageFor(model => model.proID)</div>

            <label>Loại sản phẩm</label>
            @Html.DropDownListFor(model => model.typeID, ViewBag.typeListCreate as SelectList, new { @class = "form-control" })

            <label>Hãng sản xuất</label>
            @Html.DropDownListFor(model => model.pdcID, ViewBag.pdcListCreate as SelectList, new { @class = "form-control" })


            <label>Tên sản phẩm</label>
            <input type="text" required requiredmsg="Mời nhập tên sản phẩm..!!" name="namepro" class="form-control" placeholder="Mời nhập tên sản phẩm.." />
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proName)</div>

            <label>Kích cỡ</label>
            <input type="number" required requiredmsg="Mời nhập kích cỡ sản phẩm..!!" name="size" class="form-control" placeholder="Mời nhập kích cỡ sản phẩm.." />
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proSize)</div>

            <label>Đơn giá</label>
            <input type="number" required requiredmsg="Mời nhập giá sản phẩm..!!" name="gia" class="form-control" placeholder="Mời nhập giá sản phẩm.." />
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proPrice)</div>

            <label>Chiết khấu(%)</label>
            <input type="number" required requiredmsg="Mời nhập chiết khẩu..!!" name="giam" class="form-control" placeholder="Mời nhập chiết khấu.." />
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proDiscount)</div>

            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            <div class="text-danger">@ViewBag.HinhAnh</div>

            <label>Mô tả</label>
            @Html.TextAreaFor(model => model.proDescription, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proDescription)</div>
            <br />
            <input type="submit" value="Tạo mới" class="btn btn-success" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
