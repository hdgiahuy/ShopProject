@model IEnumerable<ShopProject.Areas.Administrator.Models.Customer>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Danh mục</h2>

<hr />
@{
    ShopProject.Repository.count proDAO = new ShopProject.Repository.count();
    ShopProject.Areas.Administrator.Models.AdminContext db = new ShopProject.Areas.Administrator.Models.AdminContext();
  
}

            <div class="table-responsive " style="position: inherit;">
                <table class="table table-striped table-bordered table-hover" id="mytab">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>SĐT</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th >Messages</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 0;
                        }
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@i</td>
                                <td>@item.cusPhone</td>
                                <td>@item.cusFullName</td>
                                <td>@item.cusEmail</td>
                                <td style="max-width:300px;"> @item.cusAddress</td>
                            </tr>
                            i = i + 1;

                        }@{
                            
                        }
                        
                    </tbody>

                </table>
            </div>
           
         
  

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });


    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {

            $("label").show()
            return false;
        }
        $("label").hide()
        return true;
    }
</script>