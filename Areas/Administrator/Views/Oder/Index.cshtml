<div class="panel-body">
    <table class="table table-striped table-bordered table-hover" id="mytab">
        <thead>
            <tr>
                <th>Mã HĐ</th>
                <th>Khách Hàng</th>
                <th>Địa Chỉ</th>
                <th>SĐT</th>
                <th>Ghi chú</th>
                <th>Ngày Nhập</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.orderID</td>
                    <td>@item.orderName</td>
                    <td>@item.orderDiachi</td>
                    <td>@item.orderSDT</td>
                    <td>@item.orderMessage</td>
                    <td>@item.orderDateTime</td>
                    <td style="min-width:120px!important;">
                        <a href="#" class="btn-active" data-id="@item.orderID" id="trangthai" style="text-decoration:none; ">
                            @{
                                if (item.orderStatus == "Chờ phê duyệt")
                                {
                                    <span class="alert-danger" style="color:red; font-weight:bold">@item.orderStatus</span>
                                }
                                if (item.orderStatus == "Chuyển hàng")
                                {
                                    <span class="alert-info" style="color:blue; font-weight:bold;">@item.orderStatus</span>
                                }
                                if (item.orderStatus == "Đă thanh toán")
                                {
                                    <span class="alert-success" style="color:limegreen; font-weight:bold;">@item.orderStatus</span>
                                }
                                if (item.orderStatus == "Đã hủy")
                                {
                                    <span class="alert" style="color:#333; font-weight:bold;">@item.orderStatus</span>
                                }
                            }
                        </a>
                    </td>

                    <td> <a href="@Url.Action("oderdetail", "Oder", new { @id = item.orderID })"><i class="fa fa-list-alt fa-fw"></i></a></td>
                </tr>
            }
        </tbody>
    </table>


    <div style="text-align:center;">

    </div>

</div>




