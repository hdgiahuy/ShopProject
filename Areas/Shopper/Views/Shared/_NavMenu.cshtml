<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                @{
                    ShopProject.Areas.Shopper.Models.UserContext db = new ShopProject.Areas.Shopper.Models.UserContext();
                    foreach (var itemCate in db.Categories)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle  " data-toggle="dropdown">@itemCate.cateName<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <div class="col-sm-12">
                                    <ul class="multi-column-dropdown">
                                        @foreach (var itemPt in db.ProductTypes.Where(c => c.cateID == itemCate.cateID))
                                        {
                                            <li><a class="hehe" href="@Url.Action("ProductsByProType", "Products", new { id = itemPt.typeID, page = 1, })"><i aria-hidden="true"></i><span>>  @itemPt.typeName</span></a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="col-sm-12">
                                    <ul class="multi-column-dropdown">
                                        <li>
                                            <img src="@itemCate.catePhoto" width="100" height="50" />
                                        </li>
                                    </ul>
                                </div>
                            </ul>
                        </li>
                    }
                }
                @*hãng sản xuất*@
                <li class="dropdown ">
                    <a href="#" class="dropdown-toggle  " data-toggle="dropdown"><span>Xuất xứ<b class="caret"></b></span></a>
                    <ul class="dropdown-menu">
                        <div class="col-sm-12">
                            <ul class="multi-column-dropdown">
                                @foreach (var itemPdc in db.Producers)
                                {
                                    <li><a class="hehe" href="@Url.Action("ProductsByPdc", "Products", new { id = itemPdc.pdcID, page = 1 })"><img src="@itemPdc.pdcPhoto" width="20" height="20" /><span> @itemPdc.pdcName</span> </a></li>
                                }
                            </ul>
                        </div>
                    </ul>
                </li>

                <li><a href="/Shopper/Phanhoi/Index" ><span >Phản hồi</span></a></li>
                <li><a href="/Shopper/news/Index" ><span >Tin Tức</span></a></li>
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    </nav>
    <style>
        .dropdown-menu {
            margin-top: -20px ;
        }
    </style>