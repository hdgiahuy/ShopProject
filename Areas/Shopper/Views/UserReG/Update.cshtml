@model ShopProject.Areas.Shopper.Models.Administrator

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Shopper/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Update", "UserReG", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()




    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.adAcc)
    @Html.HiddenFor(model => model.adStatus)
    @Html.HiddenFor(model => model.adPass)
    @Html.HiddenFor(model => model.adNgaytao)
    @Html.HiddenFor(model => model.adQuyen)

  
    <div class="form-horizontal">
        <div class="container">
            <div class="row main">
                <div class="panel-heading">
                    <div class="panel-title text-center">
                        <h1 class="title">Thông Tin Tài Khoản</h1>
                        <div class="text-danger" id="error" >
                            @ViewBag.error
                        </div>
                        <div class="text-success" id="suc">
                            @ViewBag.succ
                        </div>
                        <hr />

                    </div>
                </div>
                <div class="main-login main-center " style=" margin-bottom: 20px; color:aliceblue;">
                    <form class="form-horizontal" method="post" action="#">
                        @*họ tên*@
                        <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Họ và Tên</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa-lg" aria-hidden="true"></i></span>
                                    @Html.EditorFor(model => model.adHoten, new { htmlAttributes = new { @class = "form-control ", @required = "required", @requiredmsg = "Mời nhập họ tên..!!" } })
                                </div>
                            </div>
                        </div>
                        @*Email*@
                        <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Email</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope fa-lg" aria-hidden="true"></i></span>
                                    @Html.EditorFor(model => model.adEmail, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "required", @requiredmsg = "Mời nhập email đúng định dạng..!!" } })
                                </div>
                            </div>
                        </div>
                        @*Địa chỉ*@
                        <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Địa chỉ</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i></span>
                                    @Html.EditorFor(model => model.adDiaChi, new { htmlAttributes = new { @class = "form-control", @required = "required", @requiredmsg = "Mời nhập địa chỉ..!!" } })
                                </div>
                            </div>
                        </div>
                        @*SDT*@
                        <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Số điện thoại</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-phone fa-lg" aria-hidden="true"></i></span>
                                    @Html.EditorFor(model => model.adSDT, new { htmlAttributes = new { @class = "form-control", @required = "required", @requiredmsg = "Mời nhập số điện thoại..!!" } })
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Cập nhật</button>
                    </div>
                    
                </div>

            </div>
        </div>
    </div>


}

<style>
    .panel-heading {
        height: 99px;
    }

    body, html {
        height: 100%;
        background-repeat: no-repeat;
        font-family: 'Oxygen', sans-serif;
    }

    .main {
        margin-top: 0px;
    }

    h1.title {
        font-size: 40px;
        font-family: 'Roboto Slab', serif;
        font-weight: 400;
    }

    hr {
        width: 10%;
        color: #fff;
    }

    .form-group {
        margin-bottom: 0px;
    }

    label {
        margin-bottom: 5px;
    }

    input,
    input::-webkit-input-placeholder {
        font-size: 11px;
        padding-top: 3px;
    }

    .main-login {
        background: -webkit-linear-gradient(left, #3931af, #00c6ff);
        /* shadows and rounded borders */
        -moz-border-radius: 2px;
        -webkit-border-radius: 2px;
        border-radius: 2px;
        -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    }

    .main-center {
        margin-top: 30px;
        margin: 0 auto;
        max-width: 330px;
        padding: 40px 40px;
    }

    .login-button {
        margin-top: 5px;
    }

    .login-register {
        font-size: 15px;
        text-align: center;
    }

    .regtext {
        color: black;
    }

        .regtext:hover {
            color: aliceblue;
            text-decoration: none;
        }
</style>
<script>
    $(function () {
        $('#suc').delay(1000).slideUp(1000);
        $('#error').delay(1000).slideUp(1000);
    });
</script>
