@model PagedList.IPagedList<ShopProject.Areas.Shopper.Models.Order>
@using PagedList.Mvc
@{
                /**/

                ViewBag.Title = "Thông tin khách hàng";
                Layout = "~/Areas/Shopper/Views/Shared/_Layout.cshtml";

}


<div class="panel-body" style="margin-top:20px;">
    @if (Model == null)
    {
        <div style="font-size:30px; color: red; font-weight:bold; text-align:center;">
            @ViewBag.text
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover" id="mytab">
            <thead>
                <tr>
                    <th>Mã HĐ</th>
                    <th>Khách Hàng</th>
                    <th>Địa Chỉ</th>
                    <th>SĐT</th>
                    <th>Ghi chú</th>
                    <th>Ngày Nhập</th>
                    <th>Trạng Thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.orderID</td>
                        <td>@item.orderName</td>
                        <td>@item.orderDiachi</td>
                        <td>@item.orderSDT</td>
                        <td>@item.orderMessage</td>
                        <td>@item.orderDateTime</td>
                        <td>
                            
                                @{
                                    if (item.orderStatus == "Chờ phê duyệt")
                                    {
                                        <span class="alert-danger" style="color:red; font-weight:bold">@item.orderStatus</span>
                                    }
                                    if (item.orderStatus == "Chuyển hàng")
                                    {
                                        <span class="alert-info" style="color:blue; font-weight:bold;">@item.orderStatus</span>
                                    }
                                    if (item.orderStatus == "Đă thanh toán")
                                    {
                                        <span class="alert-success" style="color:limegreen; font-weight:bold;">@item.orderStatus</span>
                                    }
                                }
                           
                        </td>

                        <td> <a href="@Url.Action("oderdetail", "DonhangUser", new { @id = item.orderID })"><i class="fa fa-list-alt fa-fw"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>





